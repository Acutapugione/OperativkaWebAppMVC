@model Operativka.Models.ActionsDocument

@{
    ViewData["Title"] = "Видалення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Чи Ви впевнені що хочете видалити це?</h3>
<div>
    <h4>План-факт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Settlement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Settlement.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConsumerCategorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConsumerCategorie.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlanningIndicator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlanningIndicator.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plan_Count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plan_Count)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fact_Count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fact_Count)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Вилучити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися назад</a>
    </form>
</div>
