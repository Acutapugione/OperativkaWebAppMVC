@using Operativka.Models;
@using Microsoft.AspNetCore.Identity;
@using Operativka.Areas.Identity.Models
@using Operativka.Areas.Identity.Pages.Account.Manage
@model List<Operativka.Models.UserRolesViewModel>

<h1>User Roles</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="table-primary">
                <th  scope="row">@user.FirstName</th>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Редагувати ролі</a>
                </td>
            </tr>
        }
    </tbody>
</table>